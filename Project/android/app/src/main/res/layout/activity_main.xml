<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fl_ct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/title_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/playground">


        <TextView
                android:id="@+id/demo_title"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/atom_graphics_demo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorAccent"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:shadowRadius="10"/>

        <ListView
                android:id="@+id/demo_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/demo_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#0000"
                android:divider="#0000"/>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>

