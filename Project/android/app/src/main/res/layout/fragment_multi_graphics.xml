<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/multi_graphics_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:clickable="true"
        android:focusable="true"
        tools:context="com.neo.demo.MultiGraphicsDemoScreen">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.neo.atomgraphics.AtomGraphicsView
                android:id="@+id/multi_graphics_view_0"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginEnd="50sp" />

        <com.neo.atomgraphics.AtomGraphicsView
                android:id="@+id/multi_graphics_view_1"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginStart="50sp" />

        <com.neo.atomgraphics.AtomGraphicsView
                android:id="@+id/multi_graphics_view_2"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginEnd="50sp">

        </com.neo.atomgraphics.AtomGraphicsView>
    </LinearLayout>
</ScrollView>